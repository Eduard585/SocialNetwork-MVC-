@model MyInstaMVC.Models.LoveModel

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.7/angular.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.7/angular-animate.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.7.7/angular-route.min.js"></script>

<script src="~/Angular/Controllers/MainController.js"></script>
<script src="~/Angular/App.js"></script>

<body>
   
    <div ng-app="App" ng-controller="MainController" data-ng-init="init(@Newtonsoft.Json.JsonConvert.SerializeObject(Model.Loves))">
        {{myVar}}
        <table>
            <tr>
                <th>He</th>
                <th>She</th>                
            </tr>
            <tr ng-repeat="l in loves">
                <td>{{l.ID}}</td>
                <td>{{l.Number}}</td>            
            </tr>
        </table>

       




    </div>
    

</body>


