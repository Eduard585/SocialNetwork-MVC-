@model MyInstaMVC.Models.LoginModel

@{
    ViewBag.Title = "Login";
}
<div class="MainWrapper">
    <h2 class="text-center">Горный университет</h2>

    @ViewBag.Message

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr class="col-md-4 mx-auto" />      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })  
        <div class="col-md-4 mx-auto"><img src="~/Content/Images/logo.png" class="mx-auto d-block" style="max-width: 100px"/></div>      
        <div class="form-group">
            <h4 class="text-center mx-auto">Логин</h4>
            <div class="col-md-4 mx-auto">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control center-block mx-auto" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4 class="text-center">Пароль</h4>
            <div class="col-md-4 mx-auto">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control center-block mx-auto" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="">
            <div class="col-md-2 mx-auto">
                <input type="submit" value="Вход" class="form-control btn btn-primary mx-auto" />
            </div>
        </div>

    </div>
        <br />
        <br />
    }
    <div class="col-md-2 mx-auto text-center">
        <span><a href='@Url.Action("Registration","User")'>Регистрация</a></span>
    </div>
</div>

